<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:elevation="0dp"
    android:id="@+id/friend_item"
    >

    <LinearLayout
        android:id="@+id/layout_notification_item"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginRight="10dp"
            android:id="@+id/img_friend_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@color/colorBlack"/>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_friend_name"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:text="Hồ Thanh Phong"/>

            <TextView
                android:id="@+id/txt_friend_date"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Bạn bè từ 20-11-2021"/>
        </LinearLayout>

        <ImageButton
            android:layout_marginLeft="8dp"
            android:id="@+id/btn_message"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_chat"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <LinearLayout
        android:background="#fff"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/friend_invitation_avartar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/cover_default"/>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_friend_invitation_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="16sp"
                android:text="Hồ Thanh Phong"/>

            <TextView
                android:id="@+id/txt_friend_invitation_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="@color/colorGray"
                android:textSize="11sp"
                android:text="12 ngày trước"/>

        </LinearLayout>

        <LinearLayout
            android:paddingLeft="8dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/friend_invitation_accept_btn"
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Chấp nhận"
                android:textSize="11sp"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:background="@drawable/btn_round_bold_red"/>

            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/friend_invitation_remove_btn"
                android:padding="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_close"/>

            <Button
                android:visibility="gone"
                android:id="@+id/friend_invitation_show"
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Bạn bè"
                android:textSize="11sp"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:background="@drawable/bg_round_edit"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
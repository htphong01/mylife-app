<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MyQRActivity"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <com.google.android.material.appbar.MaterialToolbar
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="1dp"
        app:title="">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            android:backgroundTint="@color/colorBlack"
            android:layout_marginRight="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã QR của tôi"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal" />

    </com.google.android.material.appbar.MaterialToolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/qr_image"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="250dp"/>

        <TextView
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn bè có thể tìm và kết nối với bạn khi quét mã QR này. Chia sẻ để có nhiều bạn hơn"
            android:gravity="center_horizontal"
            android:textColor="@color/colorBlack"/>

    </LinearLayout>

    <Button
        android:id="@+id/scan_btn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quét mã QR"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"
        android:background="@drawable/btn_red_border_10"/>

</LinearLayout>
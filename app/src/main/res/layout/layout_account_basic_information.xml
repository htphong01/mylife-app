<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:background="@drawable/btn_round_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:background="@drawable/btn_round_bold_red"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Cơ bản"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/account_details_btn"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="Chi tiết"
                    android:textColor="#A8575859"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/account_basic_img"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="120dp"/>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginBottom="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Họ và tên"
                    android:textColor="#A8000000"
                    android:textSize="18dp"/>

                <EditText
                    android:id="@+id/edt_account_basic_name"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:textSize="18dp"
                    android:textColor="#A8000000"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_edt"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginBottom="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ email"
                    android:textColor="#A8000000"
                    android:textSize="18dp"/>

                <EditText
                    android:focusable="false"
                    android:id="@+id/edt_account_basic_email"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:maxLines="1"
                    android:inputType="textEmailAddress"
                    android:textSize="18dp"
                    android:textColor="#A8000000"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_edt"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginBottom="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày sinh"
                    android:textColor="#A8000000"
                    android:textSize="18dp"/>

                <EditText
                    android:id="@+id/edt_account_basic_dob"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:maxLines="1"
                    android:inputType="date"
                    android:textSize="18dp"
                    android:textColor="#A8000000"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_edt"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginBottom="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giới tính"
                    android:textColor="#A8000000"
                    android:textSize="18dp"/>

                <RadioGroup
                    android:id="@+id/account_radio_gender"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <RadioButton
                        android:id="@+id/account_basic_gender_male"
                        android:layout_marginRight="7.5dp"
                        android:paddingLeft="4dp"
                        android:text="Nam"
                        android:textSize="18dp"
                        android:textColor="#A8000000"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_edt"/>

                    <RadioButton
                        android:id="@+id/account_basic_gender_female"
                        android:paddingLeft="4dp"
                        android:text="Nữ"
                        android:textSize="18dp"
                        android:textColor="#A8000000"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_edt"/>

                    <RadioButton
                        android:id="@+id/account_basic_gender_other"
                        android:layout_marginLeft="7.5dp"
                        android:paddingLeft="4dp"
                        android:text="Khác"
                        android:textSize="18dp"
                        android:textColor="#A8000000"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_edt"/>

                </RadioGroup>
            </LinearLayout>

            <Button
                android:id="@+id/account_basic_update_btn"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_red_border_10"
                android:text="Cập nhật"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="-2dp"
            android:layout_marginRight="6dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ProgressBar
                android:paddingBottom="8dp"
                android:id="@+id/task_control_bar_progress"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:indeterminateOnly="false"
                android:progress="50"
                android:rotation="-30"
                android:progressDrawable="@drawable/progress_bar_circle"/>

            <TextView
                android:id="@+id/task_control_bar_percent"
                android:layout_marginTop="-56dp"
                android:layout_marginRight="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_task_control_bar"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginBottom="2dp"
                android:id="@+id/task_control_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nộp báo cáo VDK"
                android:textSize="18dp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/task_control_bar_receiver"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Hồ Thanh Phong"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/task_control_bar_deadline"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Còn 12 giờ"
                android:textColor="#61B872"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    android:background="#FF5B5B">

    <LinearLayout
        android:id="@+id/event_my_item"
        android:padding="10dp"
        android:background="#FF5B5B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            
            <TextView
                android:id="@+id/txt_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#FF5B5B"
                android:gravity="center"
                android:background="@drawable/ic_event_round"/>

            <View
                android:layout_marginTop="4dp"
                android:layout_width="2dp"
                android:layout_height="12dp"
                android:background="@color/colorWhite" />

            <View
                android:layout_marginTop="4dp"
                android:layout_width="2dp"
                android:layout_height="12dp"
                android:background="@color/colorWhite" />

            <View
                android:layout_marginTop="4dp"
                android:layout_width="2dp"
                android:layout_height="12dp"
                android:background="@color/colorWhite" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hội thảo về AI"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/txt_time"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19:00 - 21:00 11/06/2020"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/txt_place"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Công ty FPT Software"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/txt_status"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã kết thúc"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                android:maxLines="1"
                android:ellipsize="end"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/event_details_btn"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_event_arrow"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>